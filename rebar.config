% -*- erlang -*-

% dependency directory where things will live.  we use the erlang
% lib/ standard.
{deps_dir, ["lib"]}.

% we use all of the nitrogen core libs, plus mochiweb.
{deps,
 [
  {nitrogen_core,
   "2.1.*",
   {git, "git://github.com/nitrogen/nitrogen_core.git", "HEAD"}
  },
  {nprocreg, 
   "0.2.*", 
   {git, "git://github.com/nitrogen/nprocreg.git", "HEAD"}
  },
  {simple_bridge, 
   "1.2.*", 
   {git, "git://github.com/nitrogen/simple_bridge.git", "HEAD"}
  },
  {sync, 
   "0.1.*", 
   {git, "git://github.com/rustyio/sync.git", "HEAD"}
  },
  {mochiweb,
   "2.0.*",
   {git, "git://github.com/mochi/mochiweb.git","HEAD"}
  }
 ]
}.
